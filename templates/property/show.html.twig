{% extends 'base.html.twig' %}

{% block title property.title %}

{% block body %}
    <div class="jumbotron">
    <div class="row">
            <div class="col-md-8">
            </div>
            <div class="col-md-4 text-right pr-5">
            <h1>{{ property.title}} </h1>
            <h2>{{ property.rooms}} pièces - {{ property.surface }}m²</h2>
            <h3 class="text-success">{{ property.getFormatedPrice }} euros</h3>
            <a href="#" class="btn btn-primary mt-3">Contacter l'agence</a>
            </div>
        </div>

    </div>

    <div class="container mt-5">
        <p>
        {{ property.description | nl2br }}
        </p>

        <div class="row">
            <div class="col-md-8">
            <h2 class="p-2">Caractéristiques</h2>
            <table class="table table-striped">
                <tr>
                    <td>Surface habitable</td>
                    <td>{{ property.surface }} m²</td>
                </tr>
                <tr>
                <td>Pièces</td>
                <td>{{ property.rooms }}</td>
                </tr>
                <tr>
                <td>Chambres</td>
                <td>{{ property.rooms }}</td>
                </tr>
                <tr>
                <td>Etage</td>
                <td>{{ property.floor }} ème</td>
                </tr>
                <tr>
                <td>Chauffage</td>
                <td>{{ property.heatType }}</td>
                </tr>
            </table>
            </div>

            <div class="col-md-4">
                    <h2 class="p-2">Spécificités</h2>

            </div>
        </div>
    </div>
{% endblock %}