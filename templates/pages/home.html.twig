{% extends 'base.html.twig' %}

{% block title 'Ma Super Agence' %}

{% block body %}
<div class="jumbotron text-center">
<h1>Ma Super Agence</h1>
<p> Lorem ipsum dolor sit amet, consect, consectetur adipisicing elit, assumenda assumenda 
molesyigba nblal provident repplis int soluta tmlate lustre magni irue</p>
</div>

    <div class="container">
        <h2 class="mb-5">Les derniers biens : </h2>

        <div class="row">

            {% for property in properties %}
                    <div class="card m-3 p-3">
                        <div class="card-body">
                            <h5 class="card-title"><a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.title }}</a></h5>                            </h5>

                            <h5 class="card-text text-muted">{{property.surface}}m² - {{ property.rooms }}p</h5>
                            <p class="card-text">{{property.city}} ({{property.postalCode}})</p>
                            <h4 class="card-text text-black">{{property.getFormatedPrice}} €</h4>
                        </div>
                    </div>
            {% endfor %}
            </div>
    </div>

{% endblock %}